node
{
    def mavenHome = tool name : "maven3.8.1"
    properties([[$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])
    
    stage('checkoutbuild')
    {
        git branch: 'development', credentialsId: '6f71222c-e3be-4669-9500-21ca74c8edd8', url: 'https://github.com/snehasabbasani/maven-web-application.git'
    }
    
    stage('build')
    {
        sh "${mavenHome}/bin/mvn clean package"
    }
    
    stage('executesonarqubereport')
    {
        sh "${mavenHome}/bin/mvn sonar:sonar"
    }
    
    stage('uploadtonexus')
    {
        sh "${mavenHome}/bin/mvn deploy"
    }
   
    stage('deploytotomcat')
    {
        sshagent(['4af06f86-e1e6-4591-b017-d8bf30178c77']) {
            sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@13.233.154.215:/opt/apache-tomcat-9.0.45/webapps/"
    }
    }
    
    stage('sendemailnotification')
    {
        emailext body: '''build over

       regards,
       sneha''', subject: 'build over', to: 'sneha199526@gmail.com'
        
    }
}
